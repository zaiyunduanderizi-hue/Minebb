{
  "name": "@minebb/terminal",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron:dev": "tsc -p . && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron apps/terminal/dist/main/index.js",
    "build": "tsc -p .",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "playwright test",
    "test:all": "pnpm run test && pnpm run test:e2e",
    "verify": "node ./scripts/verify-environment.cjs"
  },
  "dependencies": {
    "electron": "^31.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.16.1",
    "cross-env": "^7.0.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  }
}